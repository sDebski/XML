<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd=
"http://www.w3.org/2001/XMLSchema">
        <xsd:element name="telefon" type="telefon_litery">
        </xsd:element>

        <xsd:simpleType name="telefon_type">
               <xsd:restriction base="xsd:string">
                        <xsd:pattern 
			value="([0-9]{3}[-][0-9]{3}[-][0-9]{3})|(\+48 [0-9]{3} [0-9]{3} [0-9]{3})|([(]58[)] [0-9]{3} [0-9]{3} [0-9]{3})" />
                </xsd:restriction>
        </xsd:simpleType>

</xsd:schema>



